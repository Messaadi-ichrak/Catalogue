@model IEnumerable<Catalogue.GestionProduit.NewFolder.DAO.Produit>

@{
    ViewData["Title"] = "Index";
}

<h1>Welcome To our Jewellry Catalogue</h1>

<form class="form-inline my-2 my-lg-0" asp-action="Search" asp-controller="Produit">
    <input class="form-control mr-sm-2" placeholder="Search ..." type="search" name="name" />
    <select asp-items="ViewBag.CategorietId" name="categorieid" class="form-control"></select>
    &nbsp;&nbsp; <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Recherche</button></br></br></br></br>
    <img src="../images/bg.jpg" width="1200px" height="600px" /></br></br>
</form>



<h3>Availble Products</h3></br></br>
@foreach (var item in Model)
{
<ejs-grid id="Grid">
    <e-grid-rows height="500" width="500">
        <e-grid-row>
            <e-grid-column>
                <img src="../images/@Html.DisplayFor(modelItem => item.Image)" width="300px" height="200px" />&nbsp; &nbsp; &nbsp;
                @Html.DisplayFor(modelItem => item.Designation) &nbsp; &nbsp;
                <a asp-action="Details" asp-route-id="@item.ProduitId">Details</a>&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;
            </e-grid-column>
        </e-grid-row>
    </e-grid-rows>
</ejs-grid>
 }

   



